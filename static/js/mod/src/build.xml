<project name="core.build" default="build" basedir=".">
    <description>Core Build File</description>
    
    <import file="../../../../../build_tool/build.xml"/>
    
    <property name="charset" value="utf-8"/>
    <property name="src.dir" location="./"/>
    <property name="build.dir" location="../"/>
    <property name="copyright.files" value="null"/>

    <target name="concat">
        <concat destfile="${build.dir}/article-list.js" encoding="${charset}" outputencoding="${charset}" fixlastline="yes">
            <path path="${src.dir}/article-list.js"/>
        </concat>
        <concat destfile="${build.dir}/read-article.js" encoding="${charset}" outputencoding="${charset}" fixlastline="yes">
            <path path="${src.dir}/read-article.js"/>
        </concat>
        <concat destfile="${build.dir}/write-article.js" encoding="${charset}" outputencoding="${charset}" fixlastline="yes">
            <path path="${src.dir}/write-article.js"/>
        </concat>
        <concat destfile="${build.dir}/about.js" encoding="${charset}" outputencoding="${charset}" fixlastline="yes">
            <path path="${src.dir}/about.js"/>
            <path path="${src.dir}/about-profile.js"/>
        </concat>
        <concat destfile="${build.dir}/about-work.js" encoding="${charset}" outputencoding="${charset}" fixlastline="yes">
            <path path="${src.dir}/about-work.js"/>
        </concat>
        <concat destfile="${build.dir}/about-contact.js" encoding="${charset}" outputencoding="${charset}" fixlastline="yes">
            <path path="${src.dir}/about-contact.js"/>
        </concat>
    </target>

    <target name="build" depends="concat,common.build">
    </target>
</project>
